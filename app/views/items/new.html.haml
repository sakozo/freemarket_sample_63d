.header
  .header__logo
    = link_to image_tag("material/logo/logo.png", alt: "logo image"), "#"

.contents
  .contents-main
    .title
      %h1 商品の情報を入力

    .imege-upload
      .section
        %h2 出品画像  
        %span 必須
      %p 最大５枚までアップロードできます
      .image__list
        .item.img
        .item.img
        .item.img
        .item.img
        .item.img
    .item-name
      .section
        %p 商品名
        %span 必須
      %input{type: "text",placeholder: '商品名（必須）',class: "input-name" } 
      .section
        %p 商品の説明
        %span 必須
      %input{type: "text",placeholder: '商品の説明（色、素材、重さ、定価、注意点など)',class: "input-description"} 

    .item-details
      %h3 商品の詳細
      .item-details__box
        .section
          %p カテゴリー
          %span 必須
        %select{class: 'select-box'}
        .section
          %p ブランド
          %span 必須
        %select{class: 'select-box'}
        .section
          %p 商品の状態
          %span 必須
        %select{class: 'select-box'}

    .delivery-select
      %h4 発送について
      .delivery-select__box
        .section
          %p 配送料の負担
          %span 必須
        %select{class: 'select-box'}
        .section
          %p 発送先の地域
          %span 必須
        %select{class: 'select-box'}
        .section
          %p 発送までの日数
          %span 必須
        %select{class: 'select-box'}
      -# 価格のところ後でやり直します

    .price-input
      %h5 販売価格
      .price-input__box
        %P 価格
        %input{type: "text",placeholder: '例)¥300',class: "input-price" } 
    .sell-item
      = button_tag type: "submit", class: "sell-btn"do
        %p 出品する
.footer
  .footer__logo
    = image_tag("material/logo/logo-white.png", alt: "logo image")
  %p © FURIMA
