    .confirm-buy
      %h2 購入内容の確認
      %hr{color: "#F2F2F2", size: "3", width: "100%"}/
    .confirm-main
      .buy-item
        .buy-item_image
          item-image
        .buy-item_name
          商品名
      %hr{color: "#F2F2F2", size: "3", width: "100%"}/
      .confirm-detail
        .confirm-count
          %h3 支払い金額
          %p ￥500
        %hr{color: "#F2F2F2", size: "3", width: "100%"}/
        .confirm-way
          %h3
            支払い方法
          %h4
