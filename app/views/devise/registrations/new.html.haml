.account
  .account_logo
    = link_to image_tag("material/logo/logo.png", alt: "logo image"), root_path
  .account-page
    %h1 
      %span 新規アカウントの作成
    .account-pagenew
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .field-label
            %p
              %span 入力必須
            = f.label :ニックネーム 
          .field-input
            = f.text_field :name, placeholder: '例）フリマ　太郎', autofocus: true

        .field
          .field-label
            %p
              %span 入力必須
            = f.label :メールアドレス
          .field-input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'

        .field
          .field-label
            %p
              %span 入力必須
            = f.label :パスワード
            .field-input
              = f.password_field :password, placeholder: '8文字以上', autocomplete: "off"

        .field
          .field-label
            %p
              %span 入力必須
            = f.label :パスワードの確認
          .field-input
            = f.password_field :password_confirmation, placeholder: 'パスワードの確認', autocomplete: "off"
        .actions
          = f.submit "Create Account", class: 'btn'
    .account-page_existing
      %p
        %span ------------
        会員のお客様はこちら
        %span ------------
      = render "devise/shared/links"

