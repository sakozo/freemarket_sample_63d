.account
  .account_logo
    = link_to image_tag("material/logo/logo.png", alt: "logo image"), root_path
  .account-page
    %h2 新規アカウントの作成
    .account-form
      %p 入力必須項目
    .account-pagenew
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .field-label
            = f.label :ニックネーム
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :パスワード
            %i (英数字8文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワードの確認
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Create Account", class: 'btn'
    .account-page_existing
      %p
        %span ------------
        会員のお客様はこちら
        %span ------------
      = render "devise/shared/links"

